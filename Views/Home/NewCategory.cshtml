@model Category
<div>

    <h1>Create a Meal Category</h1>
    <a asp-controller="Home" asp-action="Dashboard" >Dashboard</a>
    <a asp-controller="Home" asp-action="Logout">Logout</a>

</div>


<form asp-controller="Home" asp-action="CreateCategory" class="shadow p-3 mb-5 rounded" method="POST">

    <div class="form-group">
        <label asp-for="Name"></label>
        <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Info"></label>
        <span asp-validation-for="Info" class="text-danger font-weight-bold"></span>
        <input asp-for="Info" class="form-control">
    </div>

    <button type="submit" class="btn btn-outline-success">Create</button>
</form>  